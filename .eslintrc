{
    "extends": [
        "airbnb",
        "prettier",
        "prettier/react"
    ],
    "parser": "babel-eslint",
    "env": {
        "jest": true
    },
    "globals": {
        "window": true,
        "document": true
    },
    "rules": {
        "import/prefer-default-export": 0,
        "import/no-extraneous-dependencies": 0,
        "react/jsx-filename-extension": [1, {
            "extensions": [".js"]
        }],
        "no-console": "off",
        "no-underscore-dangle": ["error", {
            "allow": ["_id"]
        }]

    },
    "settings": {
        "import/resolver": {
            "node": {
                "paths": ["src"]
            }
        }
    }
}